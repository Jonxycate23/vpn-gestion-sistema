# =====================================================
# CONFIGURACIÓN DEL SISTEMA
# =====================================================

# Base de datos
DATABASE_URL=postgresql://postgres:tu_password@localhost:5432/vpn_gestion
DATABASE_ECHO=False

# Seguridad JWT
SECRET_KEY=CAMBIAR_ESTA_CLAVE_SECRETA_EN_PRODUCCION_USE_openssl_rand_hex_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# Aplicación
APP_NAME="Sistema de Gestión de Accesos VPN"
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# CORS (para desarrollo local)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://127.0.0.1:3000"]

# Archivos
UPLOAD_DIR=/var/vpn_archivos
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=.pdf,.jpg,.jpeg,.png

# Alertas
DIAS_ALERTA_VENCIMIENTO=30
DIAS_GRACIA_DEFAULT=15

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/vpn_gestion.log

# Paginación
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=100
